
<style type="text/css">
tr:nth-child(even) {
background-color: #f2f2f2;
}
</style>
<table border="1" width="100%" cellspacing="0" cellpadding="2">
  <tr>
    <th>ID</th>
    <th>Person</th>
    <th>Klammer</th>
    <th>2 Komma </th>
    <th>kein Komma </th>
    <th>kein Komma Name </th>

    <th>Punkt</th>
    <th>Pattern</th>
    <th>Link</th>
  </tr>
  <% persons.forEach((person) => { %>
  <tr style="<%= person.check ? 'color: red' : '' %>">
    <td><%= person.ID %></td>
    <td><%= person.title %></td>
    <td><%= person.klammer ? 'Klammer' : ''%></td>
    <td><%= person.twoComma ? 'zwei Komma ' : ''%></td>
    <td><%= person.noComma ? 'kein Komma': '' %></td>
    <td><%= person.noCommaName ? 'kein Komma Name': ''%></td>

    <td><%= person.punkt ? 'Punkt' : ''%></td>

    <td><%= person.pattern ? 'Pattern': ''%></td>

    <td><%= person.link %></td>
  </tr>
  <% }); %>
</table>
